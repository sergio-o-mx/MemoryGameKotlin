            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:gravity="center"
            android:onClick="@{() -> gameViewModel.onClickedCardAt(2, 2)}"
            app:imageResource='@{gameViewModel.cards["22"]}'
            app:layout_constraintStart_toEndOf="@+id/image_card_21"
            app:layout_constraintTop_toBottomOf="@+id/image_card_12" />

        <ImageView
            android:id="@+id/image_card_23"
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:gravity="center"
            android:onClick="@{() -> gameViewModel.onClickedCardAt(2, 3)}"
            app:imageResource='@{gameViewModel.cards["23"]}'
