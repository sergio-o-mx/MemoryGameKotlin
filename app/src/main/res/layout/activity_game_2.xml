<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="gameViewModel"
            type="com.ioconnectservices.memorygamekotlin.viewmodels.GameViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_card_00"
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:gravity="center"
            android:onClick="@{() -> gameViewModel.onClickedCardAt(0, 0)}"
            app:imageResource='@{gameViewModel.cards["00"]}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_card_01"
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:gravity="center"
            android:onClick="@{() -> gameViewModel.onClickedCardAt(0, 1)}"
            app:imageResource='@{gameViewModel.cards["01"]}'
            app:layout_constraintStart_toEndOf="@+id/image_card_00"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_card_02"
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
